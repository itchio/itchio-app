{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch all source files",
      "type": "shell",
      "command": "node_modules/.bin/tsc",
      "args": [
        "-w",
        "-p",
        ".",
        "--noEmit",
        "--skipLibCheck"
      ],
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": {
        "_id": "build",
        "isDefault": false
      }
    },
    {
      "label": "Watch all tests",
      "type": "shell",
      "command": "npm",
      "args": [
        "test",
        "--",
        "-w"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "itch-test",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^✘ ([^\\:]+)\\:([^\\:]+)\\:([^\\:]+)\\: (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "group": {
        "_id": "test",
        "isDefault": false
      }
    },
    {
      "label": "Run single test",
      "type": "shell",
      "command": "npm",
      "args": [
        "test",
        "--",
        "-t",
        "${file}"
      ],
      "problemMatcher": {
        "owner": "itch-test",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^✘ ([^\\:]+)\\:([^\\:]+)\\:([^\\:]+)\\: (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "group": {
        "_id": "test",
        "isDefault": false
      }
    },
    {
      "label": "react-lint",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "react-lint"
      ],
      "problemMatcher": {
        "owner": "react-lint",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "\\s([^(]+)\\s\\(([0-9]+),([0-9]+)\\): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "severity": "warning"
      }
    }
  ]
}
